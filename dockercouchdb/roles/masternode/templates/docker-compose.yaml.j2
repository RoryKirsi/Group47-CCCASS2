version: "3"
services:
  couch_master:
    image: "couchdb:2.3.0"
    restart: always
    ports:
      - "9584:5984"
      - "5986:5986"
      - "4369:4369"
      - "9100-9200:9100-9200"
    volumes:
      - /data/couchdb/master:/opt/couchdb/data
    environment:
      - COUCHDB_USER=user
      - COUCHDB_PASSWORD=pass
      - NODENAME=115.146.84.146
      - ERL_FLAGS=-setcookie "brumbrum"
    container_name: couch_master